<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/create_reminder_layout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Reminder"
        android:id="@+id/create_reminder_greeting"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type:"
        android:id="@+id/create_reminder_type"
        android:layout_below="@+id/create_reminder_greeting"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_reminder_make_type"
        android:layout_below="@+id/create_reminder_type"
        android:layout_alignParentStart="true"
        android:hint="Say what Type here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/create_reminder_desc"
        android:layout_below="@+id/create_reminder_make_type"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_reminder_make_desc"
        android:layout_below="@+id/create_reminder_desc"
        android:layout_alignParentStart="true"
        android:hint="Put your description here.." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:id="@+id/create_reminder_time"
        android:layout_below="@+id/create_reminder_make_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/create_reminder_make_time"
        android:hint="Time to trigger?"
        android:layout_below="@+id/create_reminder_time"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Reminder"
        android:id="@+id/create_reminder_add_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm?"
        android:id="@+id/create_reminder_alarm"
        android:checked="false"
        android:layout_below="@+id/setDateButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:id="@+id/create_reminder_time_button"
        android:layout_alignBottom="@+id/create_reminder_make_time"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/create_reminder_date"
        android:hint="Date to trigger?"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_reminder_date_desc"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:id="@+id/create_reminder_date_desc"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/create_reminder_make_time"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:id="@+id/setDateButton"
        android:layout_alignTop="@+id/create_reminder_date_desc"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mitt nya Fragment :)"
        android:id="@+id/text_event"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type"
        android:id="@+id/eventTextType"
        android:layout_below="@+id/text_event"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time: "
        android:id="@+id/eventTextTime"
        android:layout_below="@+id/eventTextType"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description: "
        android:id="@+id/eventTextDesc"
        android:layout_below="@+id/eventTextTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type Text"
        android:id="@+id/inputTextType"
        android:layout_above="@+id/eventTextTime"
        android:layout_toEndOf="@+id/eventTextTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Desc Text"
        android:id="@+id/inputTextDesc"
        android:layout_above="@+id/eventTextDesc"
        android:layout_toEndOf="@+id/eventTextTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time Text"
        android:id="@+id/inputTextTime"
        android:layout_alignTop="@+id/eventTextDesc"
        android:layout_toEndOf="@+id/eventTextDesc" />


</RelativeLayout>
